<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <Button
        android:id="@+id/button_View_Chosen_Courses"
        android:layout_width="164dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:text="@string/button_View_Chosen_Courses"
        android:onClick="onViewChosenCoursesClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Add_New_Courses"
        android:layout_width="157dp"
        android:layout_height="64dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="56dp"
        android:onClick="onAddNewCoursesClicked"
        android:text="@string/button_Add_New_Courses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>