<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CourseName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ChosenCourseDetailActivity">

    <TextView
        android:id="@+id/courseCode"
        android:layout_width="89dp"
        android:layout_height="29dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:text="@string/courseCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/courseName"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:text="@string/courseName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseCode" />

    <TextView
        android:id="@+id/codeInfo"
        android:layout_width="131dp"
        android:layout_height="26dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="52dp"
        android:text="@string/course"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameInfo"
        android:layout_width="133dp"
        android:layout_height="28dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="88dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prereqs"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="128dp"
        android:text="@string/prereqs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prereqsInfo"
        android:layout_width="205dp"
        android:layout_height="30dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="128dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sessions"
        android:layout_width="77dp"
        android:layout_height="34dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="@string/sessions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prereqs" />

    <TextView
        android:id="@+id/sessionsInfo"
        android:layout_width="166dp"
        android:layout_height="27dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/sessions"
        app:layout_constraintTop_toBottomOf="@+id/prereqsInfo" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="98dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="548dp"
        android:onClick="onViewReturnClicked"
        android:text="@string/returnButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_chsoen_detail_previous"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="548dp"
        android:onClick="onChosenDetailPreviousClicked"
        android:text="@string/previousButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_chosen_detail_next"
        android:layout_width="88dp"
        android:layout_height="45dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="548dp"
        android:onClick="onChosenDetailNextClicked"
        android:text="@string/nextButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="80dp"
        android:layout_height="47dp"
        android:layout_marginStart="324dp"
        android:layout_marginTop="548dp"
        android:onClick="onChosenDetailExitClicked"
        android:text="@string/logoutButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>