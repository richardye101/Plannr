<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.plannr.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.plannr.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.plannr.LoginViewFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login_view" >
        <action
            android:id="@+id/action_loginFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_coursesActionSelectFragment"
            app:destination="@id/coursesActionSelectFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.plannr.RegisterViewFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register_view" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/coursesActionSelectFragment"
        android:name="com.example.plannr.CoursesActionSelectFragment"
        android:label="CoursesActionSelectFragment" >
        <action
            android:id="@+id/action_coursesActionSelectFragment_to_DisplayCoursesFragment"
            app:destination="@id/DisplayCoursesFragment" />
    </fragment>
    <fragment
        android:id="@+id/DisplayCoursesFragment"
        android:name = "com.example.plannr.DisplayCoursesFragment"
        android:label="DisplayCoursesFragment" />
</navigation>